<div class="row panel-body">
  <%= bootstrap_form_for(@location) do |f| %>
    <% if @location.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@location.errors.count, "error") %>
        </div>
        <ul>
        <% @location.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-md-6">
      <%= f.hidden_field :latitude, class: 'form-control' %>
      <%= f.hidden_field :longitude, class: 'form-control' %>
      <%= f.text_field :description, class: 'form-control' %>
      <%= f.text_field :area, class: 'form-control' %>
      <%= f.number_field :points, class: 'form-control' %>
      <%= f.text_field :hint1, class: 'form-control' %>
      <%= f.number_field :hint1_points, class: 'form-control' %>
      <%= f.text_field :hint2, class: 'form-control' %>
        <%= f.number_field :hint2_points, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.file_field :image %>
      <%= render 'map' %>
    </div>
    <div class="col-md-12">
      <%= f.button "Submit", type: 'submit', class: 'btn btn-primary' %>
      <%= link_to 'Back', locations_path, class: 'btn btn-warning' %>
    </div>
  <% end %>
</div>
