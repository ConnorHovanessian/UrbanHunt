<% provide(:title, 'Sign up') %>

<h1>Sign Up!</h1>

<div class="row panel-body">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :firstname %>
      <%= f.text_field :firstname, class: 'form-control' %>

      <%= f.label :lastname %>
      <%= f.text_field :lastname, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :question1_id, "The first security question:"%>
      <%= f.text_field :question1_id, class: 'form-control' %>

      <%= f.label :answer_q1, "The answer for Q1:"%>
      <%= f.text_field :answer_q1, class: 'form-control' %>

      <%= f.label :question2_id, "The second security question:"%>
      <%= f.text_field :question2_id, class: 'form-control' %>

      <%= f.label :answer_q2, "The answer for Q2:"%>
      <%= f.text_field :answer_q2, class: 'form-control' %>

      <br>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>