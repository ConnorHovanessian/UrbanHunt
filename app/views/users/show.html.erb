<% provide(:title, @user.username) %>

<body class="user_show_page">

<!-- Page Content -->
<div class="container">
    <!-- First Featurette -->
    <div class="featurette" id="about">
        <div class="container">
             <div class="row profile">
                <div class="col-md-3">
                    <div class="profile-sidebar">
                        <!-- SIDEBAR USERPIC -->
                        <div class="profile-userpic text-center">
                            <%= gravatar_for @user %>
                        </div>
                        <!-- END SIDEBAR USERPIC -->
                        <!-- SIDEBAR USER TITLE -->
                        <div class="profile-usertitle">
                            <div class="profile-usertitle-name">
                                <%= @user.username %><br>
                                E-mail: <%= @user.email %> <br>
        						Firstname: <%= @user.firstname %><br>
        						Lastname: <%= @user.lastname %><br>
                            </div>
                        </div>
                        <!-- END SIDEBAR USER TITLE -->

                        <!-- SIDEBAR MENU -->
                        <div class="profile-usermenu">
                            <ul class="nav">
                                <li class="active">

                                <span class="glyphicon glyphicon-home" class="side"><%= link_to "Game Rank", '#', id:"side-bar" %></span>
                                </li>

                                <li class="active"><span class="glyphicon glyphicon-ok" class="side"><%= link_to "Game History", '#', id:"side-bar" %></span>
                                </li>

                                <li class="active"><span class="glyphicon glyphicon-cog" class="side"><%= link_to "Settings", edit_user_path(current_user), id:"side-bar" %></span>
                                </li>

                                <li><%= link_to edit_user_path(current_user) do %>
                                <i class="glyphicon glyphicon-cog"></i> Settings
                                <% end %>
                              </li>
                            </ul>
                        </div>
                        <!-- END MENU -->

                    </div>
                </div>


				<!-- Profile content -->
                <div class="col-md-9">
                <div class="profile-content text-center">
                		<h2>Game Statements:<br></h2>

                    </div>
                </div>
            </div>
        </div>

<br>
<br>



</body>
