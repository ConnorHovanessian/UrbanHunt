<% provide(:title, 'Admin') %>
<div class="user_container">
<h1>Welcome! Administrator</h1>
<h2>Listing Users</h2>

<div class="row_users">
  <table class="users_table">
    <thead>
      <tr>
        <th>User name</th>
        <th>User Email</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% @user.each do |user|%>
      <tr class="<%= cycle('oddline', 'evenline')%>">
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Destroy', admin_control_index_url, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'%></td>
      </tr>
    <%end%>
  </tbody>
</table>
</div>
</div>
