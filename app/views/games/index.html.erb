<% provide(:title, 'All games') %>
<p id="notice"><%= notice %></p>

<h2>Listing Games</h2>

<div class="row">
  <table id="js-games-dt" class="table table-condensed table-striped table-bordered">
    <thead>
    <tr>
      <th>Game name</th>
      <th>Start date</th>
      <th>Duration(hours)</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.starts_at_date %></td>
        <td><%= game.duration %></td>
        <td>
          <%= link_to 'Show', game, class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_game_path(game), class: 'btn btn-info' %>
          <%= link_to 'Destroy', game, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Game', new_game_path, class: 'btn btn-info' %>
